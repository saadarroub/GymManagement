<Window x:Class="GymWPF.ConfirmForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymWPF"
        mc:Ignorable="d"
        Background="#272727"
        BorderBrush="#ffcc00"
        BorderThickness="1"

        Title="ConfirmForm" Height="150" Width="367" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Loaded="Window_Loaded"
        >
    <Grid>
        <TextBlock x:Name="mssg" Text="Vous voullez vraiment supprimer ?" Foreground="White" FontSize="18" TextWrapping="Wrap" MaxWidth="300" Margin="0 10 0 0" TextAlignment="Center" />
        <Button Height="30" Width="90" Content="Oui" Style="{StaticResource RedBtn}" Margin="70,108,205,10" Click="Button_Click" />
        <Button Height="30" Width="90" Content="Non" Style="{StaticResource GreenBtn}" Margin="205,108,70,10" Click="Button_Click_1" />

        
        
    </Grid>
    
</Window>
