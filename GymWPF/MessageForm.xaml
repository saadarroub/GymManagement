<Window x:Class="GymWPF.MessageForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymWPF"
        mc:Ignorable="d"
        Background="#272727"
        BorderBrush="#ffcc00"
        BorderThickness="1"
        Title="MessageForm" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <TextBlock Text="Bien Fait" Foreground="White" FontSize="18" Margin="14,32,6,0"/>
        <Button Height="30" Width="90" Content="OK" Style="{StaticResource GreenBtn}" Margin="0 70 0 0"/>
    </Grid>
</Window>
