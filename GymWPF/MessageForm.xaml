<Window x:Class="GymWPF.MessageForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymWPF"
        mc:Ignorable="d"
        Background="#272727"
        BorderBrush="#ffcc00"
        BorderThickness="1"
        Title="MessageForm" Height="150" Width="367" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"
        Loaded="Window_Loaded"
        >
    <Grid>

        <TextBlock Name="message" Text="Bien" Foreground="White" FontSize="18" TextWrapping="Wrap" MaxWidth="300" Margin="0 10 0 0" TextAlignment="Center" />
        <Button Height="30" Width="90" Content="OK" Style="{StaticResource GreenBtn}" Margin="138,108,137,10" Click="Button_Click"/>
    </Grid>
</Window>
